{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx", // Set JSX factory for React (ensure compatibility)
    "rootDirs": ["src"], // Define root for path aliases if src has subfolders
  },
  "include": [
    ".plasmo/index.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx" 
  ],
  "exclude": ["node_modules"]
}
